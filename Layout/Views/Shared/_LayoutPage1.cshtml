<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <style>
        .block{
            display:block;
            margin: 10px;
            border:2px dotted gray;
            padding:10px;
        }
        .block2 {
            display: inline-block;
            margin: 5px;
            border: 2px dotted #31ebbe;
            padding: 10px;
        }
        #menu ul li {
            display: inline-block;
            width: 100px;
            height: 30px;
            text-align: center;
            border: 1px solid black;
            background-color: aqua;
            margin: 5px;
            line-height:30px;
            vertical-align:middle;
        }
        #menu a{
            color:black;
            text-decoration:none;
            font-size:smaller;
        }
        #menu li:hover{
            background-color:darkgray;

        }
        #menu li:hover a{
            color:white;
        }
    </style>
</head>
<body>
    <div id="menu" class="block">
        @*Header*@
        <ul>
            <li>
                @Html.ActionLink("Home page", "homepage", "Home")
            </li>
            <li>
                @Html.ActionLink("About", "about", "Home")
            </li>
            <li>
                @Html.ActionLink("Contact", "contact", "Home")
            </li>
            <li>
                @Html.ActionLink("Testarea", "testarea", "Home")
            </li>
            <li>
                @Html.ActionLink("Blog", "blog", "Home")
            </li>


        </ul>
    </div>
    <div class="block">
        @RenderBody()
    </div>
    <div class="block">
        @*Footer*@
        <ul>
            <li>
                <a href="https://twitter.com/MelihAkkse">Twitter</a>
            </li>
            <li>
                <a href="https://www.linkedin.com/in/melih-a-40688a1a2/">LinkedIN</a>
            </li>
            <li>
                <a href="https://github.com/Olymposrec">Github</a>
            </li>
        </ul>
        <b>
            Tüm Hakları Saklıdır &copy;
        </b>
    </div>
</body>
</html>
